{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2020",
    "jsx": "react",
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
